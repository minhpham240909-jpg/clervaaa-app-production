# =============================================================================
# StudyBuddy App - Environment Variables Template
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to git - it contains your real secrets!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL database URL for production
# Example: postgresql://username:password@host:5432/database_name
DATABASE_URL="postgresql://username:password@host:5432/studybuddy_prod"

# =============================================================================
# AUTHENTICATION (NextAuth.js)
# =============================================================================
# Your production domain URL
NEXTAUTH_URL="https://your-domain.vercel.app"

# Generate a random secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-super-secret-key-at-least-32-characters-long"

# =============================================================================
# OAUTH PROVIDERS
# =============================================================================
# Google OAuth (from Google Cloud Console)
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth (from GitHub Developer Settings)
GITHUB_ID="your-github-client-id"
GITHUB_SECRET="your-github-client-secret"

# =============================================================================
# AI SERVICES
# =============================================================================
# OpenAI API Key (from https://platform.openai.com/api-keys)
OPENAI_API_KEY="your-openai-key-goes-here"

# AI Model Configuration
AI_MODEL="gpt-3.5-turbo"
AI_MAX_TOKENS="1000"

# =============================================================================
# REAL-TIME FEATURES (Optional)
# =============================================================================
# Supabase for real-time chat and notifications
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"

# =============================================================================
# NOTIFICATIONS (Optional)
# =============================================================================
# Push notifications service
NEXT_PUBLIC_VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"

# Email service (for notifications)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="StudyBuddy <noreply@your-domain.com>"

# =============================================================================
# ANALYTICS & MONITORING (Optional)
# =============================================================================
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Sentry for error tracking
SENTRY_DSN="https://your-sentry-dsn"

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to 'development' for local dev, 'production' for deployment
NODE_ENV="production"

# Enable debug logging in development
DEBUG="false"

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Rate limiting
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"

# CORS origins (comma-separated)
ALLOWED_ORIGINS="https://your-domain.vercel.app,https://your-custom-domain.com"