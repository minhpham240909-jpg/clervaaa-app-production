# ================================
# StudyBuddy Environment Variables
# ================================
# Copy this file to .env.local and fill in your actual values

# ================================
# DATABASE CONFIGURATION
# ================================
# For development (SQLite)
DATABASE_URL="file:./dev.db"
# For production (PostgreSQL) - uncomment and set your production DB URL
# DATABASE_URL="postgresql://username:password@localhost:5432/studybuddy_prod"
# Direct database connection for migrations (optional)
# DIRECT_URL="postgresql://username:password@localhost:5432/studybuddy_prod"

# ================================
# NEXTAUTH.JS CONFIGURATION
# ================================
# Your app's base URL
NEXTAUTH_URL="http://localhost:3000"
# NextAuth.js secret - generate a random 32+ character string
NEXTAUTH_SECRET="your-nextauth-secret-key-min-32-chars"

# ================================
# OAUTH PROVIDERS
# ================================
# Google OAuth (required for authentication)
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth (optional)
GITHUB_ID="your-github-app-id"
GITHUB_SECRET="your-github-app-secret"

# ================================
# ADMIN CONFIGURATION
# ================================
# Comma-separated list of founder emails (full admin access)
FOUNDER_EMAILS="founder@example.com,co-founder@example.com"
# Comma-separated list of admin emails
ADMIN_EMAILS="admin@example.com"

# ================================
# AI SERVICES
# ================================
# OpenAI API key for chatbot and AI features
OPENAI_API_KEY="sk-your-openai-api-key-here"
# AI model to use
AI_MODEL="gpt-3.5-turbo"

# ================================
# SUPABASE (OPTIONAL)
# ================================
# For real-time features like chat and notifications
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# ================================
# PUSH NOTIFICATIONS (OPTIONAL)
# ================================
# VAPID keys for web push notifications
VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"
VAPID_SUBJECT="mailto:your-email@example.com"

# ================================
# EMAIL SERVICES (OPTIONAL)
# ================================
# Choose one email provider
# SendGrid
SENDGRID_API_KEY="SG.your-sendgrid-api-key"
# Or Resend
RESEND_API_KEY="re_your-resend-api-key"
# Or SMTP
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"

# ================================
# THIRD-PARTY AI SERVICES (OPTIONAL)
# ================================
# Mindgrasp.ai Configuration (for summaries and flashcards)
MINDGRASP_API_KEY="your-mindgrasp-api-key"
# StudyFetch Configuration (for progress analysis)
STUDYFETCH_API_KEY="your-studyfetch-api-key"
# Monic.ai Configuration (for quiz generation)
MONIC_API_KEY="your-monic-api-key"

# ================================
# MONITORING & ANALYTICS (OPTIONAL)
# ================================
# Sentry for error tracking
SENTRY_DSN="your-sentry-dsn"
# Google Analytics
GOOGLE_ANALYTICS_ID="your-ga-id"

# ================================
# FILE UPLOAD (OPTIONAL)
# ================================
# Cloudinary for image/file storage
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# ================================
# SECURITY & PERFORMANCE (OPTIONAL)
# ================================
# Rate limiting
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="900000"
# Content Security Policy
CONTENT_SECURITY_POLICY="default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline';"

# ================================
# ENVIRONMENT & DEPLOYMENT
# ================================
# Development, production, or test
NODE_ENV="development"
# Public app URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"
# Enable test mode features (development only)
ENABLE_TEST_MODE="false"

# ================================
# FEATURE FLAGS (OPTIONAL)
# ================================
ENABLE_AI_FEATURES="true"
ENABLE_REAL_TIME_CHAT="true"
ENABLE_PUSH_NOTIFICATIONS="true"
ENABLE_ANALYTICS="false"

# ================================
# PRODUCTION SPECIFIC (Uncomment for production)
# ================================
# Your production domain
# NEXTAUTH_URL="https://your-domain.com"
# Secure database URL
# DATABASE_URL="postgresql://user:pass@host:5432/studybuddy_prod"
# Production-ready secret
# NEXTAUTH_SECRET="your-super-secure-32-plus-character-secret"
# NODE_ENV="production"
# NEXT_PUBLIC_APP_URL="https://your-domain.com"

# ================================
# DEVELOPMENT NOTES
# ================================
# 1. Copy this file to .env.local for development
# 2. Never commit .env.local to version control
# 3. Required variables for basic functionality:
#    - DATABASE_URL
#    - NEXTAUTH_URL
#    - NEXTAUTH_SECRET
#    - GOOGLE_CLIENT_ID
#    - GOOGLE_CLIENT_SECRET
# 4. Optional variables enhance features but app will work without them
# 5. Run `npm run db:push` after setting up DATABASE_URL
# 6. Run `npm run db:seed` to populate with sample data
